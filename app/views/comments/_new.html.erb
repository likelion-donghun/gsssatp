<%= form_for comment do |f| %>
  <%#= current_user.name %>

  <%= f.text_field :content %>
  
  <div class="field">
<%=f.label :image  %>
<%=f.file_field :image%>
</div> 
   
   <% if belong=="eatery" %>
    <%= f.hidden_field :eatery_id, value: eatery %>
  <% end %>
  
  <% if belong=="promotion" %>
    <%= f.hidden_field :promotion_id, value: promotion %>
  <% end %>
  
<%=f.submit 'write', class: 'waves-effect waves-light btn'%>
<%end%>
